<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:foreground="?selectableItemBackground">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/portfolioBackground"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/traderImageView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/traderNameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/subtitle_text_size"
        app:layout_constraintBottom_toBottomOf="@id/traderImageView"
        app:layout_constraintStart_toEndOf="@id/traderImageView"
        app:layout_constraintTop_toTopOf="@id/traderImageView"
        tools:text="John Doe" />

    <TextView
        android:id="@+id/traderTotalAmountView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/subtitle_text_size"
        app:layout_constraintBottom_toTopOf="@+id/traderExtraAmountView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="3888,88" />

    <TextView
        android:id="@+id/traderExtraAmountView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="@dimen/extra_amount_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/traderTotalAmountView"
        app:layout_constraintTop_toBottomOf="@id/traderTotalAmountView"
        tools:text="498,88" />

    <ImageView
        android:id="@+id/traderExtraAmountImage"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/traderExtraAmountView"
        app:layout_constraintEnd_toStartOf="@id/traderExtraAmountView"
        app:layout_constraintTop_toTopOf="@id/traderExtraAmountView"
        tools:src="@drawable/ic_home_black_24dp" />

</android.support.constraint.ConstraintLayout>